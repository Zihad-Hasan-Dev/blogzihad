{
    "version": 2,
    "name": "zihadsblog",
    "builds": [
        { "src": "server/app.js", "use": "@vercel/node" },
        { "src": "client/package.json", "use": "@vercel/static-build", "config": { "distDir": "client/dist" } }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server/app.js"
        },
        {
            "src": "/(.*)",
            "dest": "/client/$1"
        }
    ]
}
